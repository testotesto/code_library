package com.munkychop.actionscript.display{	import com.greensock.TweenLite;	import fl.motion.Color;	import flash.display.MovieClip;	import flash.geom.ColorTransform;	public class ManipulateImage	{		public static function setTint (object:MovieClip, colourHex:Number = 0x000000, tintStrength:Number = 1):void		{			var colour:Color = new Color ();			colour.setTint (colourHex, tintStrength);			object.transform.colorTransform = colour;		}				public static function tweenTint (object:MovieClip, speed:Number, colourHex:Number = 0x000000, tintStrength:Number = 1):void		{			TweenLite.to (object, speed, {colorTransform:{tint:colourHex, tintAmount:tintStrength}});		}	}}